<div class="row justify-content-center">
  <div class="col-6">
    <h1 class="text-center">Join a Room</h1>
    <%= form_tag("/rooms", method: :get) do %>
      <div class="form-group">
        <%= label_tag(:room_code, "Enter room code:") %>
        <%= text_field_tag(:room_code, session[:room_code] ? session[:room_code] : nil, placeholder: "e.g. GH3XP0", class: "form-control") %>
      </div>
      <div class="form-group">
        <%= label_tag(:user_name, "Your name:") %>
        <%= text_field_tag(:user_name, current_user ? current_user.user_name : nil, placeholder: "e.g. Jon Snow", class: "form-control") %>
      </div>
      <%= submit_tag("Join Room", class: "btn btn-primary") %>
    <% end %>
    <div class="text-right">
      <%= link_to("Or host a room.", "/rooms/new", method: :get) %>
    </div>
  </div>
</div>